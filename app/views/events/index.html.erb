<!-- CONTENT --------------------------------------------------------------------------------->

<!-- Intro Section -->
<section class="inner-intro bg-img10 overlay-light parallax parallax-background2">
    <div class="container">
        <div class="row title">
            <h2 class="h2">Portfolio</h2>
            <div class="page-breadcrumb">
                <a>Home</a>/<a>Portfolio</a>/<span>Grid</span>
            </div>
        </div>
    </div>
</section>
<div class="clearfix"></div>



<section class="ptb ptb-sm-80">
    <div class="container">
        <!-- work Filter -->
        <div class="row">
            <ul class="container-filter categories-filter">
                <li><a class="categories active" data-filter="*">All Events</a></li>
                <li><a class="categories" data-filter=".futureEspcop">Upcoming ESPCOP Events</a></li>
                <li><a class="categories" data-filter=".futurePartner">Upcoming Partner Events</a></li>
                <li><a class="categories" data-filter=".pastEspcop">Past ESPCOP Events</a></li>
                <li><a class="categories" data-filter=".pastPartner">Past Partner Events</a></li>
            </ul>
        </div>
        <!-- End work Filter -->
        <div class="container-grid nf-col-4">
            <% @events.each do |event| %>
               <div class="nf-item branding <%= Time.now >= event.date ? 'past' : 'future' %><%= event.espcop? ? 'Espcop' : 'Partner' %>">
                    <div class="item-box">
                        <% unless event.url.empty? %>
                            <%= link_to event.url, target: :blank do %>
                                <img alt="1" src="assets/portfolio/1.jpg" class="item-container">
                                <div class="item-mask">
                                    <div class="item-caption">
                                        <h6 class="white"><%= event.title%></h6>
                                        <p class="white"><%= event.location%></p>
                                    </div>
                                </div>
                            <% end %>
                        <% else %>
                            <%= link_to event_path(event) do %>
                                <img alt="1" src="assets/portfolio/1.jpg" class="item-container">
                                <div class="item-mask">
                                    <div class="item-caption">
                                        <h6 class="white"><%= event.title%></h6>
                                        <p class="white"><%= event.location%></p>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            <% end %> 
        </div>
    </div>
</section>
<script type="text/javascript">
    jQuery(".active").click();
</script>

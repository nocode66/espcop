<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ESPCOP</title>


    <%= render partial: 'partials/scripts' %>
    
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="espcop.com">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <!-- Favicone Icon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/images/favicon.ico">
    <link rel="icon" type="image/png" href="assets/images/favicon.png">
    <link rel="apple-touch-icon" href="assets/images/favicon.png">

    <!-- CSS -->

    <link href="/assets/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <link href="/assets/stylesheets/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/assets/stylesheets/plugin/jPushMenu.css" rel="stylesheet" type="text/css" />
    <link href="/assets/stylesheets/plugin/animate.css" rel="stylesheet" type="text/css" />
    <link href="/assets/stylesheets/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script src="https://js.stripe.com/v2/"></script>
    <script src="https://js.stripe.com/v3/" async></script>
     
</head>

<body class="full-intro full-intro push-body" style="overflow: visible;">
   
   
    

    
    
    <%= render partial: 'partials/side_menu' %>
   <% render partial: 'partials/search_menu_top' %> 
   



    <!-- Site Wraper -->
    <div class="wrapper">
         
       
  

        <!-- HEADER -->
        <header class="header sticky">
            <div class="container">

                <!-- logo -->
                <div class="logo">
                    <a href="#">
                 <img src="/assets/logo-black.png" />
                <img href="/assets/logo-white.png", class:"l-white" />
                <img href="/assets/logo-color.png", class:"l-color" />
                    </a>
                </div>
                <!--End logo-->

                <!-- Rightside Menu (Search, Cart, Bart icon) -->
                <div class="side-menu-btn">
                    <ul>
                        <!-- Search Icon 
                        <li class="">
                            <a class="right-icon search toggle-menu menu-top push-body"><i class="fa fa-search"></i></a>
                        </li>
                        End Search Icon -->

                       

                        <!--Sidebar Menu Icon-->
                        <li class="">
                            <a class="right-icon bar-icon toggle-menu menu-right push-body"><i class="fa fa-bars"></i></a>
                        </li>
                        <!-- End Sidebar Menu Icon-->
                    </ul>
                </div>
                <!-- End Rightside Menu -->

                <!-- Navigation Menu -->
               <%= render partial: "partials/top_navigation" %>

            </div>
        </header>
        <!-- END HEADER -->

        <!-- CONTENT --------------------------------------------------------------------------------->

     

        
        <hr />

        <!-- Contant Slider Section -->
        <section id="contant" class="wow fadeIn ptb ptb-sm-80">
            <%= yield %>
        </section>
        <!-- End Contain Slider Section -->

       

       

        <!-- END CONTENT ---------------------------------------------------------------------------->

        <%= render partial: 'partials/footer' %>


        <!-- Scroll Top -->
        <a class="scroll-top">
            <i class="fa fa-angle-double-up"></i>
        </a>
        <!-- End Scroll Top -->

    </div>
    <!-- Site Wraper End -->

</body>
</html>
